<%= render 'shared/header'%>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= flash[:notice] %>
            <section>
			    <h2>User info</h2>
			    <%= attachment_image_tag current_user,:profile_image, :fill,100,100, class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg" %>
			    <table class="table">
			    	<thead>
			    		<tr>
			    			<th></th>
			    			<th></th>
			    		</tr>
			    	</thead>
			    	<tbody>
			    		<tr>
			    			<td>name</td>
			    			<td><%= current_user.name %></td>
			    		</tr>
			    		<tr>
			    			<td>introduction</td>
			    			<td><%= current_user.introduction %></td>
			    		</tr>
			    	</tbody>
			    </table>
			    <%= link_to '', edit_user_path(current_user.id) , class: "btn btn-default btn-ig btn-block glyphicon glyphicon-wrench", aria_hidden: "true" %>
			</section>
			<%= render 'shared/newbook'%>

			<% if @newbook. errors.any? %>
	           <%= @newbook. errors.count %>件のerrorが発生しました。
	           <% @newbook.errors.full_messages.each do |massage| %>
	           <%= massage %>
	           <% end %>
            <% end %>

		</div>


        <div class="col-xs-9">
	        <h2>Books</h2>
	        <table class="table">
	        	<thead>
	        		<tr>
	        			<th></th>
	        			<th>Title</th>
	        			<th>Opinion</th>
	        		</tr>
	        	</thead>
	        	<% @books.each do |f| %>
	        	<tbody>
	        		<tr>
	        			<td>
	        				<%= link_to user_path(f.user[:id]) do %>
	        				<%= attachment_image_tag f.user,:profile_image, size:"40x40" , class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg" %>
	        				<% end %>
	        			</td>
	        			<td> <%= link_to f.title,  book_path(f) %> </td>
	        			<td><%= f.body %></td>
	        		</tr>
	        	</tbody>
	        	<% end %>
	        </table>
        </div>
    </div>
</div>