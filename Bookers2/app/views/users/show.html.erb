<%= render 'shared/header' %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<section>
			    <h2>User info</h2>
			    <%= attachment_image_tag @user,:profile_image, :fill,100,100, class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg" %>
			    <table class="table">
			    	<thead>
			    		<tr>
			    			<th></th>
			    			<th></th>
			    		</tr>
			    	</thead>
			    	<tbody>
			    		<tr>
			    			<td>name</td>
			    			<td><%= @user.name %></td>
			    		</tr>
			    		<tr>
			    			<td>introduction</td>
			    			<td><%= @user.introduction %></td>
			    		</tr>
			    	</tbody>
			    </table>
			    <%= link_to '', edit_user_path(current_user.id) , class: "btn btn-default glyphicon glyphicon-wrench", aria_hidden: "true" %>
			</section>
			<%= render 'shared/newbook' %>
		</div>


        <div class="col-xs-9">
	        <h2>Books</h2>
	        <table class="table">
	        	<thead>
	        		<tr>
	        			<th></th>
	        			<th>Title</th>
	        			<th>Opinion</th>
	        		</tr>
	        	</thead>
	        	<% @books.each do |f| %>
	        	<tbody>
	        		<tr>
	        			<td> <%= f.user.name %> </td>
	        			<td> <%= link_to f.title,  book_path(f) %>  </td>
	        			<td> <%= f.body %> </td>
	        		</tr>
	        	</tbody>
	        	<% end %>
	        </table>
        </div>
    </div>
</div>