<%= render 'shared/header' %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'shared/userinfo' %>
			<%= render 'shared/newbook' %>
		</div>


        <div class="col-xs-9">
	        <h2>Users</h2>
	        <table class="table">
	        	<thead>
	        		<tr>
	        			<th>image</th>
	        			<th>name</th>
	        			<th></th>
	        		</tr>
	        	</thead>
	        	<% @users.each do |f| %>
	        	<tbody>
	        		<tr>
	        			<td> <%= attachment_image_tag f,:profile_image, size:"40x40" , class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg" %></td>
	        			<td> <%= f.name %> </td>
	        			<td> <%= link_to 'show', user_path(f) %> </td>
	        		</tr>
	        	</tbody>
	        	<% end %>
	        </table>
        </div>
    </div>
</div>