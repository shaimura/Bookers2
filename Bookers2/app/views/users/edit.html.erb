<%= render 'shared/header'%>

<h2>User info</h2>
<%= form_for (@user) do |f| %>

<p>Name</p>
<%= f.label :name %>
<%= f.text_field :name, autofocus: true, autocomplete: "neme" %>
<p>Image</p>
<%= f.attachment_field :image %>

<p>introduction</p>
<%= f.label :introduction %>
<%= f.text_area :introduction %>

<%= f.submit 'Update User' class: "btn btn-default" %>